{
    "svelte.enable-ts-plugin": true,
    "svelte.plugin.svelte.note-new-transformation": false,

    // ESLint & Prettier
    "eslint.validate": [
        "javascript", 
        "javascriptreact",
        "typescript", 
        "typescriptreact", 
        "html", 
        "vue", 
        "markdown",
        "svelte",
        "astro",
    ],
    "[javascript][typescript][astro][svelte][json]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "esbenp.prettier-vscode",
    },
    // Stylelint
    "stylelint.validate": ["css", "scss", "astro", "svelte"],
    "[css][svelte][astro]": {
        "editor.codeActionsOnSave": {
            "source.fixAll.stylelint": true
        },
    },
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,

    "vitest.include": [
        "tests/{unit,integration}/*.test.{js,ts,jsx,tsx}"
    ]
}